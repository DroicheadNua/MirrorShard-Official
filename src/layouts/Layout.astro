---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	/* グローバルCSS変数 (MirrorShardの配色をWebに移植) */
	:root {
		--bg-color: #0a0a0a;
		--text-color: #e0e0e0;
		--accent-color: #00ff41;
		--secondary-color: #008f11;
        --ui-border: #333;
		--card-bg: #1a1a1a;
	}
	
	html {
		font-family: system-ui, sans-serif;
		background: var(--bg-color);
		color: var(--text-color);
        scroll-behavior: smooth;
	}
	
	body {
		margin: 0;
		padding: 0;
        line-height: 1.6;
	}

    /* 共通のユーティリティクラス */
    .container {
        width: 90%;
        max-width: 1000px;
        margin: 0 auto;
        padding: 0 20px;
    }

    a {
        color: var(--accent-color);
        text-decoration: none;
        transition: opacity 0.2s;
    }
    a:hover {
        opacity: 0.8;
    }
</style>